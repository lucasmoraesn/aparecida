# ============================================
# SUPABASE CONFIGURATION
# ============================================
SUPABASE_URL=your_supabase_url_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# ============================================
# PUBLIC URL (NGROK/PRODUCTION)
# ============================================
# Para desenvolvimento local com ngrok
VITE_PUBLIC_URL_NGROK=https://your-ngrok-url.ngrok-free.app
PUBLIC_URL_NGROK=https://your-ngrok-url.ngrok-free.app

# Para produção (seu domínio real)
PRODUCTION_DOMAIN=https://your-production-domain.com

# ============================================
# STRIPE - PAGAMENTO COM CARTÃO
# ============================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# ============================================
# MERCADO PAGO - SANDBOX
# ============================================
MERCADO_PAGO_ACCESS_TOKEN=your_test_token_here
MP_USE_SANDBOX=true

# ============================================
# MERCADO PAGO - PRODUÇÃO
# ============================================
# Descomente e configure quando for produção
# MERCADO_PAGO_ACCESS_TOKEN=your_production_token_here
# MP_USE_SANDBOX=false

# ============================================
# NODE ENVIRONMENT
# ============================================
# Valores possíveis: development, production, test
NODE_ENV=development

# ============================================
# SERVER PORT
# ============================================
PORT=3001

# ============================================
# RESEND - SERVIÇO DE E-MAIL
# ============================================
# API Key do Resend (https://resend.com/api-keys)
RESEND_API_KEY=re_your_resend_api_key_here

# E-mail remetente (deve estar verificado no Resend)
# Para testes, pode usar: onboarding@resend.dev
# Para produção, use seu domínio verificado
FROM_EMAIL=Explore Aparecida <onboarding@resend.dev>

# E-mail do administrador (recebe notificações de novas assinaturas)
ADMIN_EMAIL=seu-email@dominio.com

# E-mail para testes (opcional)
CUSTOMER_TEST_EMAIL=seu-email-teste@dominio.com
